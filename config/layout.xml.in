<layout>
    
    <!-- Menus here -->
    <menu title="Media">
    
        <entry title="Kodi">
            <command>@CMD_KODI@</command>
            <card>
                <icon>@ICONS_DIR@kodi.webp</icon>
                <background>#000000</background>
            </card>
        </entry>
        
        <entry title="Plex">
            <command>@CMD_PLEX@</command>
            <card>
                <icon>@ICONS_DIR@plex.png</icon>
                <background>#313138</background>
            </card>
        </entry>

        <entry title="Netflix">
            <command>@CMD_NETFLIX@</command>
            <card>
                <icon>@ICONS_DIR@netflix.svg</icon>
                <background>#FFFFFF</background>
            </card>
        </entry>
        
        <entry title="YouTube">
            <command>@CMD_YOUTUBE@</command>
            <card>
                <icon>@ICONS_DIR@youtube.svg</icon>
                <background>#FFFFFF</background>
            </card>
        </entry>
        
        <entry title="Jellyfin">
            <command>@CMD_JELLYFIN@</command>
            <card>
                <icon>@ICONS_DIR@jellyfin.svg</icon>
                <background>#000B25</background>
            </card>
        </entry>

        <entry title="Disney+">
            <command>@CMD_DISNEYPLUS@</command>
            <card>@ICONS_DIR@disneyplus.svg</card>
        </entry>
    </menu>

    <menu title="Games">
    
        <entry title="Steam">
            <command>@CMD_STEAM@ steam://open/bigpicture</command>
            <card>
                <icon>@ICONS_DIR@steam.svg</icon>
                <background>#000000</background>
            </card>
        </entry>
        
        <entry title="RetroArch">
            <command>@CMD_RETROARCH@</command>
            <card>
                <icon>@ICONS_DIR@retroarch.svg</icon>
                <background>#235195</background>
            </card>
        </entry>

        <entry title="Minecraft">
            <command>@CMD_MINECRAFT@</command>
            <card>
                <icon margin="10%">@ICONS_DIR@minecraft.svg</icon>
                <background>@ICONS_DIR@minecraft-bg.png</background>
            </card>
        </entry>

    </menu>

    <!-- Sidebar commands here -->
    <command title="Sleep">:sleep</command>
    <command title="Restart">:restart</command>
    <command title="Shutdown">:shutdown</command>
    <command title="Quit">:quit</command>

</layout>
